extends layout 
 
block content 
  h1= title 
  if (toShow == null) 
    h2 No instance to details 
  else
  - let toolid = toShow._id
  - let name = toShow.name
  - let version = toShow.version 
  - let cost = toShow.cost 
  div(class='container')
    div.row 
      div(class='toolAttr mr-3') Tool  ID is: 
      div #{toolid} 
    div.row 
      div(class='toolAttr mr-3') Tool name is: 
      div(class='toolDetailAttr') #{name}
    div.row
      div(class='toolAttr mr-3') Tool version: 
      div(class='toolDetailAttr') #{version}
    div.row  
      div(class='toolAttr mr-3') Tool cost is: 
      div(class='toolDetailAttr') #{cost}
    